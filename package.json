{
  "name": "electron-react-typescript-boilerplate",
  "version": "0.0.1",
  "author": "Gil Balsiger",
  "license": "MIT",
  "private": true,
  "main": "./dist/electron.bundle.js",
  "scripts": {
    "start": "webpack serve -c ./configs/renderer.dev.ts",
    "electron": "cross-env NODE_ENV=development electron -r ./scripts/babel-register ./src/main.ts",
    "build": "concurrently \"yarn:build:*\"",
    "build:renderer": "cross-env NODE_ENV=production webpack -c ./configs/renderer.prod.ts",
    "build:main": "cross-env NODE_ENV=production webpack -c ./configs/main.prod.ts",
    "clean": "gulp clean",
    "dist": "yarn clean && yarn build && electron-builder"
  },
  "build": {
    "appId": "your.unique.app.id",
    "productName": "Electron React Boilerplate",
    "files": [
      "dist",
      "package.json",
      "!node_modules",
      {
        "from": "src",
        "filter": "index.prod.html"
      }
    ],
    "directories": {
      "output": "out",
      "buildResources": "res"
    },
    "linux": {
      "icon": "256x256.png"
    }
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@babel/register": "^7.14.5",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@types/node": "^16.3.1",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^3.11.5",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.0",
    "core-js": "^3.15.2",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.6",
    "del": "^6.0.0",
    "electron": "^13",
    "electron-builder": "^22.11.7",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.3.0",
    "react-refresh": "^0.10.0",
    "style-loader": "^3.0.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0"
  }
}
