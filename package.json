{
  "name": "electron-react-typescript-boilerplate",
  "description": "Electron React Typecript boilerplate for your next app",
  "version": "0.0.1",
  "author": "Gil Balsiger",
  "license": "MIT",
  "private": true,
  "main": "dist/electron.bundle.js",
  "scripts": {
    "start": "webpack serve -c ./configs/renderer.dev.ts",
    "electron": "electron -r ./scripts/babel-register ./src/main.ts",
    "build": "cross-env NODE_ENV=production concurrently \"yarn:build:*\"",
    "build:renderer": "webpack -c ./configs/renderer.prod.ts",
    "build:main": "webpack -c ./configs/main.prod.ts",
    "clean": "rimraf dist out",
    "dist": "yarn clean && yarn build && electron-builder"
  },
  "build": {
    "appId": "your.unique.app.id",
    "productName": "Electron React Boilerplate",
    "files": [
      "dist",
      "package.json",
      "res",
      "!node_modules",
      {
        "from": "src",
        "filter": "index.prod.html"
      }
    ],
    "directories": {
      "output": "out",
      "buildResources": "res"
    },
    "win": {
      "target": [
        "nsis",
        "zip",
        "portable",
        "7z"
      ],
      "icon": "res/logo.ico"
    },
    "linux": {
      "icon": "res/logo_256.png"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/register": "^7.17.7",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.5",
    "@types/node": "^17.0.23",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "@types/webpack": "^5.28.0",
    "babel-loader": "^8.2.4",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "electron": "^18",
    "electron-builder": "^23.0.3",
    "react": "^17",
    "react-dom": "^17",
    "react-refresh": "^0.12.0",
    "rimraf": "^3.0.2",
    "sass": "^1.50.0",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1",
    "webpack-merge": "^5.8.0"
  }
}
