{
  "name": "electron-react-typescript-boilerplate",
  "version": "0.0.1",
  "author": "Gil Balsiger",
  "license": "MIT",
  "private": true,
  "main": "dist/electron.bundle.js",
  "scripts": {
    "start": "webpack serve -c ./configs/renderer.dev.ts",
    "electron": "electron -r ./scripts/babel-register ./src/main.ts",
    "build": "concurrently \"yarn:build:*\"",
    "build:renderer": "cross-env NODE_ENV=production webpack -c ./configs/renderer.prod.ts",
    "build:main": "cross-env NODE_ENV=production webpack -c ./configs/main.prod.ts",
    "clean": "rimraf dist out",
    "prod": "yarn clean && yarn build && electron-builder"
  },
  "build": {
    "appId": "your.unique.app.id",
    "productName": "Electron React Boilerplate",
    "files": [
      "dist",
      "package.json",
      "res",
      "!node_modules",
      {
        "from": "src",
        "filter": "index.prod.html"
      }
    ],
    "directories": {
      "output": "out",
      "buildResources": "res"
    },
    "linux": {
      "icon": "256x256.png"
    }
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/register": "^7.16.7",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.4",
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^4.5.1",
    "babel-loader": "^8.2.3",
    "concurrently": "^7.0.0",
    "core-js": "^3.20.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "electron": "^16",
    "electron-builder": "^22.14.5",
    "react-refresh": "^0.11.0",
    "rimraf": "^3.0.2",
    "style-loader": "^3.3.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.2",
    "webpack-merge": "^5.8.0"
  }
}
